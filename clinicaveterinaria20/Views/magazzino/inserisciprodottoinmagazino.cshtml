        @Html.LabelFor(model => model.idbrand, htmlAttributes: new { @class = "control-label " })
        <div class="">
            @Html.DropDownListFor(model => model.idbrand, new SelectList(ViewBag.Brand, "Value", "Text"), "- Seleziona azienda -", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idbrand, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 ">
            <input type="submit" value="Aggiungi" class="btn btn-default" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}