@model clinicaveterinaria20.Models.Brand

@{
    ViewBag.Title = "aggiugiAziende";
}
<style>
    #aggBrand{
        text-align:center;
        margin-bottom: 3px;

    }
    #datiBrand{
        text-align:center;
        margin-bottom: 3px;
    }
    #inpBrand{
        border-radius: 100px;
    }


</style>

<div>
    @Html.ActionLink("ᐊ", "Home", "Vendite", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2 id="aggBrand">AGGIUNGI NUOVO BRAND</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 id="datiBrand">Compila i dati del nuovo brand</h4>
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label " })
            <div class="">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", id="inpBrand" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.piva, htmlAttributes: new { @class = "control-label " })
            <div class="">
                @Html.EditorFor(model => model.piva, new { htmlAttributes = new { @class = "form-control", id = "inpBrand" } })
                @Html.ValidationMessageFor(model => model.piva, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sedelegale, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.sedelegale, new { htmlAttributes = new { @class = "form-control", id = "inpBrand" } })
                @Html.ValidationMessageFor(model => model.sedelegale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.recapito, htmlAttributes: new { @class = "control-label " })
            <div class="">
                @Html.EditorFor(model => model.recapito, new { htmlAttributes = new { @class = "form-control", id = "inpBrand" } })
                @Html.ValidationMessageFor(model => model.recapito, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 ">
                <input type="submit" value="Aggiungi" class="btn btn-light rounded-pill border-0 w-100 fw-semibold p-2 mt-3 mb-3" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
