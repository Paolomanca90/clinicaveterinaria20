@model clinicaveterinaria20.Models.Vendita

@{
    ViewBag.Title = "EditVendita";

}


<div>
    @Html.ActionLink("ᐊ", "Home", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2 class="p-5 fw-semibold display-4">Modifica vendita</h2>

@if (ViewBag.Errore != null)
{
    <p class="text-center text-danger fs-5 fst-italic p-3">@ViewBag.Errore</p>
}

@using (Html.BeginForm("Edit", "Vendite", FormMethod.Post, new { @class = "w-50 mx-auto my-5" }))
{
    @Html.AntiForgeryToken()

    <div class=" form-horizontal ">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.nricetta, htmlAttributes: new { @class = "control-label fw-semibold pb-2" })
            <div class="w-100">
                @Html.EditorFor(model => model.nricetta, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2" } })
                @Html.ValidationMessageFor(model => model.nricetta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.quantita, htmlAttributes: new { @class = "control-label fw-semibold pb-2", })
            <div class="w-100">
                @Html.EditorFor(model => model.quantita, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2" } })
                @Html.ValidationMessageFor(model => model.quantita, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Prodotti, htmlAttributes: new { @class = "control-label fw-semibold pb-2" })
            <div class="w-100">
                @Html.DropDownListFor(model => model.idprodotto, new SelectList(ViewBag.Prodotti, "Value", "Text"), new { @class = "form-control w-100 rounded-pill p-2" })
            </div>
        </div>

        <div class="form-group mt-5">
            <div class="w-100 text-center">
                <input type="submit" value="Modifica vendita" class="btn btn-light rounded-pill border-0 w-25 fw-semibold p-2 fs-5" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}